
   <%- include ("partes/cabecera2") %>
<script>
    function comprobarContraseña(input) {
    let clave1 = $("input#clave").val();
    let clave2 = $(input).val();
   
    if (clave1 !== clave2) {
        $("div#mensajeC").html('<p class="text-center" style="color: rgb(0,0,0);">Su clave no coincide</p>');
    }else{
        $("div#mensajeC").html('');
    }
 }
 function limpiarMsj() {
     $("div#mensaje").html('');
 }

</script>
   <body class="full-cover-background">
       
       <div class="form-container">
           <p class="text-center" style="margin-top: 350px;">
               <i class="zmdi zmdi-accounts zmdi-hc-4x"></i>
           </p>
           <h4 class="text-center all-tittles" style="margin-bottom: 20px;">Ingresa tus datos</h4>
           <% if (mensajeRegistro) { %>
            <div class="text-center" >
                <%= mensajeRegistro %>
            </div> 
               <% } %> <br> <br>
           <form  action="/signupConfigB" method="POST" autocomplete="off">
               <div class=" col-xs-16 col-sm-14 col-sm-offset-1 ">
                   <div class="group-material">
                       <input name="nombres" type="text" onclick="limpiarMsj()" class="material-control material-control-login" placeholder="Nombres" required="" maxlength="35" pattern="[a-zA-ZáéíóúÁÉÍÓÚñÑ ]{1,35}" data-toggle="tooltip" data-placement="top" title="Escribe el nombre del administrador">
                       <span class="highlight"></span>
                       <span class="bar"></span>
                       <label>Nombres</label>
                   </div>
                   <div class="group-material">
                       <input name="apellidos" type="text" class="material-control material-control-login" placeholder="Apellidos" required="" maxlength="35" pattern="[a-zA-ZáéíóúÁÉÍÓÚñÑ ]{1,35}" data-toggle="tooltip" data-placement="top" title="Escribe el nombre del administrador">
                       <span class="highlight"></span>
                       <span class="bar"></span>
                       <label>Apellidos</label>
                   </div>
                   <div class="group-material">
                       <select name="tipo_u" class="material-control-login">
                       <option value="" disabled="" selected="">Tipo de usuario</option>
                       <option >Bibliotecario</option>

                   </select>
                   </div>
                   <div class="group-material">
                       <div class="div-table-row-list" >
                           <div class="div-table-cell" style="width: 10%;">
                               <select name="tipoCarnet" class="material-control-login" required="">
                               <option value="" disabled="" selected="">Tipo de identificación </option>
                               <option >Carnet de identidad</option>
                               <label > </label>
                           </select>
                        </div>
                           <div class="div-table-cell" style="width: 10%;">
                               <input name="cedula" class="material-control material-control-login input-check-user" placeholder="Cédula" required="" maxlength="11" pattern="^[0-9]{1,11}$" data-toggle="tooltip" data-placement="top" >
                       <span class="highlight"></span>
                       <span class="bar"></span>
                       <label > </label>
                       </div>
                       
                   </div>
                   </div>
                   <div class="group-material">
                       <input name="correo" type="email" class="material-control material-control-login" placeholder="E-mail" maxlength="50" data-toggle="tooltip" data-placement="top" title="Escribe el Email del administrador">
                       <span class="highlight"></span>
                       <span class="bar"></span>
                       <label>Correo</label>
                   </div>
                   <div class="group-material">
                       <input name="clave" type="password" id="clave" class="material-control material-control-login" placeholder="ej. mkj_mk5412, sólo 10 dígitos"  pattern="^([a-zA-Z0-9_]{2,})(_)?([a-zA-Z0-9_]{2,})$" title="Sólo formatos como, ej. Mjhds_12dl, con 10 digitos y solo se permite el caracter especial '_' y entre letras y números" required="" maxlength="10" minlength="10" data-toggle="tooltip" data-placement="top" >
                       <span class="highlight"></span>
                       <span class="bar"></span>
                       <label>Contraseña</label>
                   </div>
                   <div style="position: absolute; margin-left:100px;" id="mensajeC"></div>
                   <div class="group-material">
                       <input name="claveControl" onkeyup="javascript: comprobarContraseña(this)" type="password" class="material-control material-control-login" placeholder="Repite la contraseña" required="" maxlength="10" data-toggle="tooltip" pattern="^([a-zA-Z0-9_]{2,})(_)?([a-zA-Z0-9_]{2,})$"data-placement="top" title="Repite la contraseña" minlength="10">
                       <span class="highlight"></span>
                       <span class="bar"></span>
                       <label>Repetir contraseña</label>
                   </div>
   
               </div>
   
               <button class="btn-login" type="submit">Guardar &nbsp; <i class="zmdi zmdi-arrow-right"></i></button>
               
           </form>
           
          
       </div>
   </body>
   
   </html>